<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchActivity"
    android:padding="16dp"
    android:id="@+id/constraint_layout_search">

    <EditText
        android:id="@+id/edit_text_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/hint_introduce_a_preference"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"/>

    <TextView
        android:id="@+id/label_choose_a_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alegeti o data"
        app:layout_constraintRight_toLeftOf="parent"/>

    <Button
        android:id="@+id/button_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_button_chose_a_date"
        app:layout_constraintTop_toBottomOf="@id/edit_text_input"
        app:layout_constraintLeft_toLeftOf="    parent"
        android:background="@drawable/ripple_button"
        android:padding="16dp"/>

    <Spinner
        android:id="@+id/spinner_sort_by"
        android:layout_width="0dp"
        android:layout_height="38dp"
        app:layout_constraintLeft_toRightOf="@id/button_date_picker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_date_picker"
        app:layout_constraintBottom_toBottomOf="@id/button_date_picker"
        android:layout_marginStart="16dp"
        android:background="@drawable/ripple_button"/>

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_date_picker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>